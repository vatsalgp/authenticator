{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "build",
		"ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"functions": {
			"port": "5001"
		},
		"firestore": {
			"port": "5002"
		},
		"hosting": {
			"port": "5003"
		},
		"ui": {
			"enabled": true,
			"port": "5004"
		}
	}
}
